{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["components"],
  "ignore_include": "global.d.ts",
  "exclude": ["node_modules"]
}
